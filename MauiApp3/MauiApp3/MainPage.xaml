<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage"
             Title="Início">

    <ScrollView>
        <VerticalStackLayout BackgroundColor="#6A449B"
            Padding="30"
            Spacing="35">
            <Button BackgroundColor="Black"
                Text="Abrir produto mais vendido no momento"
                FontAttributes="Bold"
                TextColor="White"
                x:Name="btnProduto"
                Clicked="btnProduto_Clicked"
            />
            <Button BackgroundColor="Black"
                Text="Abrir lista de produtos"
                    FontAttributes="Bold"
                TextColor="White"
                x:Name="btnListaProduto"
                Clicked="btnListaProduto_Clicked"
            />
            <Button BackgroundColor="Black"
                 Text="+ Adicionar produto +"
                 FontAttributes="Bold"
                 TextColor="White"
                 x:Name="btnAdicionar"
                 Clicked="btnAdicionar_Clicked"
            />
            <Image
                Source="https://s2.coinmarketcap.com/static/img/coins/200x200/12947.png"
                HeightRequest="235"
                Aspect="AspectFit"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>